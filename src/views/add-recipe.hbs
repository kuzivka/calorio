{{#if error}}
<span>Error: {{error}}</span>
{{/if}}
<form method="POST" action="add-recipe">
  <div>
    <label for="name">Назва Рецепту:</label>
    <input name="name" type="text" required />
  </div>
  <div>
    <label for="description">Опис рецепту:</label>
    <textarea name="description" required></textarea>
    <div>
      <label for="vegeterian">Вегетаріанський:</label>
      <input type="checkbox" name="vegeterian" />
    </div>

    <div>
      <label for="products">Продукти:</label>
      <select name="products" required multiple>
        {{#each products}}
        <option>
          {{name}}
        </option>
        {{/each}}
      </select>
    </div>

    <div>
      <label for="">Вкажіть пароль:</label>
      <input type="password" name="secretKey" />
    </div>

    <input type="submit" value="Створити" />
</form>